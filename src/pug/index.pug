doctype html
mixin portfolioButton(keyword)
    button.btn.btn-outline-primary.btn-sm.portfolio-tag(data-keyword=keyword) #{keyword}

html(lang='en')
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
        meta(name='description' content='')
        meta(name='author' content='')
        title Dr Guillaume Charbonnier - Freelance Bioinformatician
        // Favicon
        link(rel='icon' type='image/x-icon' href='assets/favicon.ico')
        // Font Awesome icons (free version)
        script(src='https://use.fontawesome.com/releases/v6.3.0/js/all.js' crossorigin='anonymous')
        // Google fonts
        link(href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css')
        link(href='https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic' rel='stylesheet' type='text/css')
        // Core theme CSS (includes Bootstrap)
        link(href='css/styles.css' rel='stylesheet')
    body#page-top
        // Navigation
        nav.navbar.navbar-expand-lg.bg-secondary.text-uppercase.fixed-top#mainNav
            .container
                a.navbar-brand(href='#page-top') Guillaume Charbonnier
                button.navbar-toggler.text-uppercase.font-weight-bold.bg-primary.text-white.rounded(type='button' data-bs-toggle='collapse' data-bs-target='#navbarResponsive' aria-controls='navbarResponsive' aria-expanded='false' aria-label='Toggle navigation')
                    | Menu
                    i.fas.fa-bars
                .collapse.navbar-collapse#navbarResponsive
                    ul.navbar-nav.ms-auto
                        li.nav-item.mx-0.mx-lg-1
                            a.nav-link.py-3.px-0.px-lg-3.rounded(href='#portfolio') Portfolio
                        li.nav-item.mx-0.mx-lg-1
                            a.nav-link.py-3.px-0.px-lg-3.rounded(href='#about') About me
                        li.nav-item.mx-0.mx-lg-1
                            a.nav-link.py-3.px-0.px-lg-3.rounded(href='#contact') Contact
        // Masthead
        header.masthead.bg-primary.text-white.text-center
            .container.d-flex.align-items-center.flex-column
                // Masthead Avatar Image
                img.masthead-avatar.mb-5(src='assets/img/picture.png' alt='...')
                // Masthead Heading
                h1.masthead-heading.mb-0 Dr Guillaume Charbonnier
                h2.masthead-heading.mb-0 Freelance Bioinformatician
                // Icon Divider
                .divider-custom.divider-light
                    .divider-custom-line
                    .divider-custom-icon
                        i.fas.fa-star
                    .divider-custom-line
                // Masthead Subheading
                p.masthead-subheading.font-weight-light.mb-0 Workflow development - High-throughput approaches - Data Integration - Data Visualization
        // Portfolio Section
        section.page-section.portfolio#portfolio
            .container
                // Portfolio Section Heading
                h2.page-section-heading.text-center.text-uppercase.text-secondary.mb-0 Portfolio
                // Icon Divider
                .divider-custom
                    .divider-custom-line
                    .divider-custom-icon
                        i.fas.fa-star
                    .divider-custom-line
                // Filter Options
                .row.justify-content-center.mb-3
                    .col-md-10
                        // Bootstrap Tabs
                        ul.nav.nav-tabs.nav-fill#filterTabs(role='tablist')
                            li.nav-item
                                a.nav-link.active#discipline-tab(data-bs-toggle='tab' href='#discipline' role='tab' aria-controls='discipline' aria-selected='true') Discipline
                            li.nav-item
                                a.nav-link#technology-tab(data-bs-toggle='tab' href='#technology' role='tab' aria-controls='technology' aria-selected='false') Technology
                            li.nav-item
                                a.nav-link#technique-tab(data-bs-toggle='tab' href='#technique' role='tab' aria-controls='technique' aria-selected='false') Technique
                            li.nav-item
                                a.nav-link#analysis-tab(data-bs-toggle='tab' href='#analysis' role='tab' aria-controls='analysis' aria-selected='false') Analysis
                            li.nav-item
                                a.nav-link#tool-tab(data-bs-toggle='tab' href='#tool' role='tab' aria-controls='tool' aria-selected='false') Tool
                            //- li.nav-item
                            //-     a.nav-link#application-tab(data-bs-toggle='tab' href='#application' role='tab' aria-controls='application' aria-selected='false') Application
                            //- li.nav-item
                            //-     a.nav-link#organism-tab(data-bs-toggle='tab' href='#organism' role='tab' aria-controls='organism' aria-selected='false') Organism
                        .tab-content#filterTabsContent
                            .tab-pane.fade.show.active#discipline(role='tabpanel' aria-labelledby='discipline-tab')
                                .keyword-category
                                    include includes/tags/discipline.pug
                            .tab-pane.fade#technology(role='tabpanel' aria-labelledby='technology-tab')
                                .keyword-category
                                    include includes/tags/technology.pug
                                p Technologies are not displayed in the item tags below if multiple technologies are involved to preserve space. However, you can use them to narrow down your search.
                            .tab-pane.fade#technique(role='tabpanel' aria-labelledby='technique-tab')
                                .keyword-category
                                    include includes/tags/technique.pug
                                p Techniques are not displayed in the item tags below if multiple techniques are involved to preserve space. However, you can use them to narrow down your search.
                            .tab-pane.fade#analysis(role='tabpanel' aria-labelledby='analysis-tab')
                                .keyword-category
                                    include includes/tags/analysis.pug
                            .tab-pane.fade#tool(role='tabpanel' aria-labelledby='tool-tab')
                                .keyword-category
                                    include includes/tags/tool.pug
                                p Tools are not displayed in the item tags below if multiple tools are involved to preserve space. However, you can use them to narrow down your search.
                            .tab-pane.fade#application(role='tabpanel' aria-labelledby='application-tab')
                                .keyword-category
                                    include includes/tags/application.pug
                            .tab-pane.fade#organism(role='tabpanel' aria-labelledby='organism-tab')
                                .keyword-category
                                    include includes/tags/organism.pug
                // Filter Mode Buttons and Clear Filters
                .row.justify-content-center.mb-3
                    .col-md-10.text-center
                        button.btn.btn-outline-secondary.btn-sm.filter-mode-button.active(data-mode='union') Union of Keywords
                        button.btn.btn-outline-secondary.btn-sm.filter-mode-button(data-mode='intersection') Intersection of Keywords
                        button.btn.btn-outline-secondary.btn-sm#selectAllKeywords Select All Keywords
                        button.btn.btn-outline-secondary.btn-sm#unselectAllKeywords Unselect All Keywords
                //- p Use the filters above to find projects matching your criteria.
                // Portfolio Grid Items
                .row
                    include includes/portfolio/articles.pug
                    include includes/portfolio/reports.pug
                    include includes/portfolio/ATAC-Seq.pug
                    include includes/portfolio/Bionano.pug
                    include includes/portfolio/ChIP-Seq_histone_PTM.pug
                    include includes/portfolio/ChIP-Seq_TF.pug
                    include includes/portfolio/chromatin_states.pug
                    include includes/portfolio/CITE-Seq.pug
                    include includes/portfolio/differential_expression.pug
                    include includes/portfolio/EM-Seq.pug
                    include includes/portfolio/GSEA.pug
                    include includes/portfolio/HiC.pug
                    include includes/portfolio/Illumina_WGS.pug
                    include includes/portfolio/integration.pug
                    include includes/portfolio/interactome.pug
                    include includes/portfolio/isoform_quantification.pug
                    include includes/portfolio/MethylationEPIC.pug
                    include includes/portfolio/MNase-Seq.pug
                    include includes/portfolio/Nanopore_WGS.pug
                    include includes/portfolio/ORA_gProfiler.pug
                    include includes/portfolio/qc.pug
                    include includes/portfolio/RNA-Seq.pug
                    include includes/portfolio/sample_mislabeling.pug
                    include includes/portfolio/scRNA-Seq.pug
                    include includes/portfolio/cell_type_identification.pug
                    include includes/portfolio/trajectory.pug
                    include includes/portfolio/smRNA-Seq.pug
                    include includes/portfolio/snv_indel_detection.pug
                    include includes/portfolio/WES.pug
                    include includes/portfolio/WGBS.pug

                // Always Displayed Message
                .col-12.col-md-8.col-lg-7.mx-auto.text-center
                    p No projects found matching your criteria? This may mean I haven't yet worked on that specific area or haven't updated my portfolio with relevant examples. However, I offer custom analyses, so please don't hesitate to contact me to discuss your specific needs!
        // About Section
        section.page-section.bg-primary.text-white.mb-0#about
            .container
                // About Section Heading
                h2.page-section-heading.text-center.text-uppercase.text-white About me
                // Icon Divider
                .divider-custom.divider-light
                    .divider-custom-line
                    .divider-custom-icon
                        i.fas.fa-star
                    .divider-custom-line
                // About Section Content
                .row
                    .col-lg-4.ms-auto
                        p.lead Bioinformatician with strong interest for epigenetic regulation, personalized medicine and reproducible high-throughput approaches in high-performance computing environments.
                    .col-lg-4.me-auto
                        p.lead I can help you to find answers in your genomic data and support from data generation up to publishable results. Feel free to reach me below to discuss about your project.
                // About Section Button
                .text-center.mt-4
                    a.btn.btn-xl.btn-outline-light(href='https://www.dropbox.com/s/9qh16qmgs5nzana/CV_Guillaume_Charbonnier_en.pdf?dl=1')
                        i.fas.fa-download.mr-2
                        | Download my CV
        // Contact Section
        section.page-section#contact
            .container
                // Contact Section Heading
                h2.page-section-heading.text-center.text-uppercase.text-secondary.mb-0 Contact Me
                // Icon Divider
                .divider-custom
                    .divider-custom-line
                    .divider-custom-icon
                        i.fas.fa-star
                    .divider-custom-line
                // Contact Section Form
                .row.justify-content-center
                    .col-lg-8.col-xl-7
                        form(action="https://formspree.io/myyerzpq" method="POST")
                            .form-floating.mb-3
                                input.form-control#name(name="name" type="text" placeholder="Enter your name..." required="required" data-validation-required-message="Please enter your name.")
                                label(for="name") Full Name
                                .invalid-feedback Please enter your name.
                            .form-floating.mb-3
                                input.form-control#email(name="email" type="email" placeholder="name@example.com" required="required" data-validation-required-message="Please enter your email address.")
                                label(for="email") Email Address
                                .invalid-feedback Please enter your email address.
                            //- .form-floating.mb-3
                            //-   input.form-control#phone(name="phone" type="tel" placeholder="(123) 456-7890" required="required" data-validation-required-message="Please enter your phone number.")
                            //-   label(for="phone") Phone Number
                            //-   .invalid-feedback Please enter your phone number.
                            .form-floating.mb-3
                                textarea.form-control#message(name="message" placeholder="Enter your message here..." style="height: 10rem" required="required" data-validation-required-message="Please enter a message.")
                                label(for="message") Message
                                .invalid-feedback Please enter a message.
                            br
                            #success
                            .d-grid
                                button.btn.btn-primary.btn-xl#sendMessageButton(type="submit") Send
        // Footer
        footer.footer.text-center
            .container
                .row
                    // Footer Social Icons
                    .col-12.mb-5
                        h4.text-uppercase.mb-4 Around the Web
                        a.btn.btn-outline-light.btn-social.mx-1(href="https://github.com/guillaumecharbonnier")
                            i.fab.fa-fw.fa-github
                        a.btn.btn-outline-light.btn-social.mx-1(href="https://www.linkedin.com/in/guillaumecharbonnier")
                            i.fab.fa-fw.fa-linkedin-in
        // Copyright Section
        section.copyright.py-4.text-center.text-white
            .container
                small Copyright &copy; Guillaume Charbonnier 2025
        // Scroll to Top Button (Only visible on small and extra-small screen sizes)
        .scroll-to-top.d-lg-none.position-fixed
            a.js-scroll-trigger.d-block.text-center.text-white.rounded(href="#page-top")
                i.fas.fa-chevron-up
        // Bootstrap core JS
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js')
        // Core theme JS
        script(src='js/scripts.js')
        // SB Forms JS
        //- script(src='https://cdn.startbootstrap.com/sb-forms-latest.js')
        script(src="js/filtertags.js")